{
  "include": ["src/*.ts", "src/**/*.ts", "src/**/*.vue"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "typeRoots": ["node_modules/@types", "src/shims"],
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "sourceMap": true,
    "strictPropertyInitialization": false
  }
}
